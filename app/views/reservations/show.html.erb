<center>
<p id="notice"><%= notice %></p>
<br />

    <h4>
	  <%= I18n.t 'redirect' %> <span id="countdown">10</span> <%= I18n.t 'seconds' %>
	</h4>


	<script type="text/javascript">

	    // Total seconds to wait
	    var seconds = 10;

	    function countdown() {
	        seconds = seconds - 1;
	        if (seconds < 0) {
	            // Chnage your redirection link here
	            window.location = "https://www.messenger.com/closeWindow/?image_url=https://i.ytimg.com/vi/owjuZW4EDlE/hqdefault.jpg&display_text=thanks_for_your_reservation!";
	        } else {
	            // Update remaining seconds
	            document.getElementById("countdown").innerHTML = seconds;
	            // Count down using javascript
	            window.setTimeout("countdown()", 1000);
	        }
	    }

	    // Run countdown function
	    countdown();

	</script>

	<h2>
	  <strong><%= I18n.t 'reserveddate' %>:</strong>
	  <%= @reservation.slot.date.strftime("%d/%m") %>
	</h2>

	<h2>
	  <strong><%= I18n.t 'reservedtime' %>:</strong>
	  <%= @reservation.slot.time.strftime('%H:%M') %>
	</h2>

	<h2>
	  <strong><%= I18n.t 'reservedtable' %>:</strong>
	  <%= @reservation.slot.table_id %>
	</h2>

	<h2>
	  <strong><%= I18n.t 'guests' %>:</strong>
	  <%= @reservation.guest %>
	</h2>
	<br />
	<%= link_to 'Change', edit_reservation_path(@reservation) %> |
    <%= link_to 'Cancel', @reservation, method: :delete, data: { confirm: 'Are you sure?.' } %>

</center>