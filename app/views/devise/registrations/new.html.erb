<center>
<div style="background: #f3f2f2;padding:15px;border-radius:10px;color:#1c1c1c;">
<h4><b><%= I18n.t "register" %></b></h4>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  	<%= I18n.t "username" %>
    <%= f.input :email, required: true, autofocus: true, label: false %><br />
  	<%= I18n.t "password" %>
    <%= f.input :password, required: true, hint: ("<br />#{@minimum_password_length} characters minimum".html_safe if @minimum_password_length), label: false %><br />
  	<%= I18n.t "repeat-password" %>
    <%= f.input :password_confirmation, required: true, label: false %><br />
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'button login' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</center>